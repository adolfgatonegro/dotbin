#!/usr/bin/env bash

#------------------------------------------------------------------------------
# gatofetch
# adolf@gatoneg.ro
# https://github.com/adolfgatonegro
#------------------------------------------------------------------------------
# Tiny fetch script thing, because anything else is overkill
#------------------------------------------------------------------------------ 

host="$(cat /etc/hostname)"
user="$(whoami)"
kernel="$(uname -r)"
uptime="$(uptime -p | sed 's/up //')"
packages="$(pacman -Q | wc -l)"
# shell="$(basename "${SHELL}")"

if [ -x "$(command -v tput)" ]; then
	bold="$(tput bold)"
	black="$(tput setaf 0)"
	red="$(tput setaf 1)"
	green="$(tput setaf 2)"
	yellow="$(tput setaf 3)"
	blue="$(tput setaf 4)"
	magenta="$(tput setaf 5)"
	cyan="$(tput setaf 6)"
	white="$(tput setaf 7)"
	reset="$(tput sgr0)"
fi

# you can change these
lc="${reset}${bold}${red}"         # labels
ic="${reset}"                      # info
# c0="${reset}${cyan}"               # first color

## OUTPUT
cat <<EOF

          /\\_/\\     ${lc}  ${ic}${host}
     ____/ o o \\    ${lc}  ${ic}${kernel}
   /~____  =ø= /    ${lc}  ${ic}${packages} 
  (______)__m_m)    ${lc}  ${ic}${uptime} 

EOF
